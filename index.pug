- var NOTES = ['A', 'A#', 'B', 'C', 'C#', 'D', 'D#', 'E', 'F', 'F#', 'G', 'G#'];

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    link(rel='stylesheet' type='text/css' href='/app.css') 
    script(type='text/javascript' src='https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js')
    script(type='text/javascript' src='/teoria.js')
    script(type='text/javascript' src='/__javascript__/app.js')
  body
    pre
      #app
        #scale {{ selectedRoot.scale }}
        #scaleSelector
          #root
          each val in NOTES
            span.selectable(
                v-bind:class="{ selected: selectedRoot.selectedRoot == '" + val + "'}"
                v-on:click="selectedRoot.selectRoot('" + val + "')"
            )= val
